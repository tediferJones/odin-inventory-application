extends layout 

block content 
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name of Game: 
      input#name.form-control(type='text' name='name' placeholder='Metroid' value=(undefined===game ? '' : game.name))

      label(for='description') Description:
      input#description.form-control(type='text' name='description' placeholder='The original Metroid adventure' value=(undefined===game ? '' : game.description))

      label(for='price') Price (USD):
      input#price.form-control(type='number' step='0.01' min='0.01' name='price' placeholder='14.99' value=(undefined===game ? '' : game.price))

      label(for='instock') Number in-stock: 
      input#instock.form-control(type='number' min='1' name='instock' placeholder='1' value=(undefined===game ? '' : game.instock))

      hr

      button.btn.btn-primary(type='submit') Submit 

      if errors 
        ul 
          for error in errors 
            li!= error.msg