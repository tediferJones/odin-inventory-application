extends layout 

block content 
  h1= title 

  form(method='POST' action='')
    div.form-group
      label(for='name') Name of Accessory:
      input#name.form-control(type='text' name='name' placeholder='Game Boy Link Cable' value=(undefined===accessory ? '' : accessory.name))

      label(for='description') Description: 
      input#description.form-control(type='text' name='description' placeholder='Connect 2 Game Boys to battle and trade' value=(undefined===accessory ? '' : accessory.description))

      label(for='price') Price (USD): 
      input#price.form-control(type='number' step='0.01' min='0.01' name='price' placeholder='8.99' value=(undefined===accessory ? '' : accessory.price))

      label(for='instock') Number in-stock: 
      input#instock.form-control(type='number' min='1' name='instock' placeholder='1' value=(undefined===accessory ? '' : accessory.instock))

      hr

      button.btn.btn-primary(type='submit') Submit 

      if errors 
        ul 
          for error in errors 
            li!= error.msg